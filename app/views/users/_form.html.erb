<% content_for(:js_css) do %>
  <%= stylesheet_link_tag 'sign_up' %>
<% end %>

<%= form_for(@user) do |f| %>
  <fieldset>
	  <legend>Sign Up</legend>
	  <span class='error' id='error3'><%= flash[:alert] %></span>
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name, :size => 30 %><span class='error'><%= @user.errors[:name].join(', ') %></span>
    </div>
    <div class="field">
      <%= f.label :username %>
      <%= f.text_field :username, :size => 30 %><span class='error'><%= @user.errors[:username].join(', ') %></span>
    </div>
    <div class="field">
      <%= f.label :password %>
      <%= f.password_field :password, :size => 30 %><span class='error'><%= @user.errors[:password].join(', ') %></span>
    </div>
    <div class="field">
      <%= f.label :password_confirmation, 'Confirm' %>
      <%= f.password_field :password_confirmation, :size => 30 %>
    </div>
    <div class="field">
      <%= f.label :gender %>:<br />
      <%= f.radio_button :gender, 'M', :checked => true %>
      <%= f.label :Male %>&nbsp;
      <%= f.radio_button :gender, 'F' %>
      <%= f.label :Female %>
    </div>
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, :size => 30 %><span class='error'><%= @user.errors[:email].join(', ') %></span>
    </div>
    <br />
    <span class="actions">
	    <%= f.submit "Sign Up" %><span style='clear:both;'></span>
	  </span>
	  <span class='actions' style='float:left'>
			<%= link_to('Sign In', login_url)%>
		</span> 
  </fieldset> 
<% end %>
